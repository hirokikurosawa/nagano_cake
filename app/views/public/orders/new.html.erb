<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h1>注文情報入力</h1>
      <%= form_with model: @order,url: check_orders_path, method: :get, local:true do |f| %>
        <h5 class="font-weight-bold">支払方法</h5>
        <div>
          <div>
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
          </div>
          <div>
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
          </div>
        </div>

        <h5 class="font-weight-bold">お届け先</h5>
        <div>
        <div>
          <%= f.radio_button :select_address, 0, checked: "checked" %>
        <label>ご自身の住所</label><br>
        </div>
        <div>
          <div>
            〒<%= current_customer.postal_code %>　<%= current_customer.address %><br>
            <%= current_customer.last_name%><%= current_customer.first_name%><br>
          </div>
        </div>
        <%= f.radio_button :select_address, 1 %>
        <label>新しいお届け先</label><br>
        </div>
        <table>
          <tr>
            <td>郵便番号（ハイフンなし）</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :name %></td>
          </tr>
        </table>
        <div class="offset-md-5 mt-3">
          <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
