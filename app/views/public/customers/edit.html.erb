<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h1>会員情報編集</h1>
      <%= form_with model: @customer,url: customer_path(@customer.id), local:true do |f| %>
        <div class="field">
          <div>
            <%= f.label "名前", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "フリガナ", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "郵便番号", class: "col-sm-3 control-label" %>
            <%= f.text_field :postal_code %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "住所", class: "col-sm-3 control-label" %>
            <%= f.text_field :address %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "電話番号", class: "col-sm-3 control-label" %>
            <%= f.text_field :telephone_number %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "メールアドレス", class: "col-sm-3 control-label" %>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
        </div>
        <div class="d-flex flex-row bd-highlight mb-3">
          <div class="col-md-3 offset-md-3">
              <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        <% end %>
          <div class="col-md-3 offset-md-3">
            <%= link_to "退会する", customer_check_path(@customer), class: "btn btn-danger" %>
          </div>
        </div>
    </div>
  </div>
</div>