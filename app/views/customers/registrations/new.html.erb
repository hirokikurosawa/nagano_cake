<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field">
          <div>
            <%= f.label "名前", class: "col-sm-3 control-label" %>
            <%= f.label "（姓）" %>
            <%= f.text_field :last_name %>
            <%= f.label "（名）" %>
            <%= f.text_field :first_name %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "フリガナ", class: "col-sm-3 control-label" %>
            <%= f.label "（セイ）" %>
            <%= f.text_field :last_name_kana %>
            <%= f.label "（メイ）" %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "メールアドレス", class: "col-sm-4 control-label" %>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "郵便番号（ハイフンなし）", class: "col-sm-4 control-label" %>
            <%= f.text_field :postal_code %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "住所", class: "col-sm-4 control-label" %>
            <%= f.text_field :address %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "電話番号（ハイフンなし）", class: "col-sm-4 control-label" %>
            <%= f.text_field :telephone_number %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label :password, "パスワード（6文字以上）", class: "col-sm-4 control-label" %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label :password_confirmation, "パスワード確認用", class: "col-sm-4 control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="offset-md-5 mt-3 mb-3">
            <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>

      <% end %>

      <h3>既に登録済みの方</h3>
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。

    </div>
  </div>
</div>
