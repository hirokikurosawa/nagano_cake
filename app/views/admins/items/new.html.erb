<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 my-5">
      <h1>商品新規登録</h1>
      <%= form_with model: @item,url: admins_items_path, local:true do |f| %>
        <div class="col-xs-4">
          <div class="form-group block-content">
            <%= f.label :商品画像, class: "col-sm-3 control-label"  %>
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-group">
            <%= f.label :商品名, class: "col-sm-3 control-label"  %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :商品説明, class: "col-sm-3 control-label"  %>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <%= f.label :税抜価格, class: "col-sm-3 control-label"  %>
            <%= f.text_field :price %>円
          </div>
        </div>
        <div class="col-md-6 offset-md-3">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>