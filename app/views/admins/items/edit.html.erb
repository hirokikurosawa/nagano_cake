<div class="container">
  <div class="row">
    <div class="col-md-10s offset-md-1 my-5">
      <h1>商品編集</h1>
      <%= form_with model: @item,url: admins_item_path, method: :patch, local:true do |f| %>
        <div class="col-xs-4">
          <div class="form-group block-content">
            <div>
              <%= f.label :商品画像 %>
              <%= f.attachment_field :image %>
            </div>
          </div>
        </div>
        <div>
          <%= f.label :商品名, class: "col-sm-3 control-label" %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :商品説明, class: "col-sm-3 control-label" %>
          <%= f.text_area :introduction %>
        </div>
        <div>
          <%= f.label :税抜価格, class: "col-sm-3 control-label" %>
          <%= f.text_field :price %>円
        </div>
        <div class="offset-md-3 mt-3">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>