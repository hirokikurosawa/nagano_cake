<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-5">
      <div class="d-flex flex-row bd-highlight" >
        <h1>商品一覧</h1>
        <div class="col-md-2 offset-md-3">
          <%= link_to new_admins_item_path do %>
          <i class="fas fa-plus-circle fa-3x"></i>
          <% end %>
        </div>
      </div>
      <table class="table genre-index table-bordered">
        <thead>
          <tr>
            <td>商品ID</td>
            <td>商品名</td>
            <td>税抜価格</td>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admins_item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="col-md-3 offset-md-3">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
