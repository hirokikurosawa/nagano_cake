<div class="container">
  <div class="row">
    <div class="col-md-10s offset-md-1 my-5">
      <h1>商品詳細</h1>
      <div class="d-flex flex-row bd-highlight">
        <div>
          <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpg', fallback: "cake.png" %>
        </div>
        <div　 class="d-flex flex-column bd-highlight ml-5">
          <table>
            <tbody>
              <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td>税込価格<br>(税抜価格)</td>
                <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
              </tr>
            </tbody>
          </table>
          <div class="offset-md-3 mt-3">
            <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>