<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-5">
        <h1>会員一覧</h1>
        <table class="table genre-index table-bordered">
          <thead>
            <tr>
              <td>会員ID</td>
              <td>氏名</td>
              <td>メールアドレス</td>
              <td>ステータス</td>
            </tr>
          </thead>
          <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admins_customer_path(customer) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active? %>
                  <span class="label label-primary">有効</span>
                <% else %>
                  <span class="label label-danger">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <div class="col-md-3 offset-md-3">
          <%= paginate @customers %>
        </div
      </div>
    </div>
  </div>
</div>