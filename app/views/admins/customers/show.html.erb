<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-5">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
      <table>
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th>氏名</th><td><%= @customer.last_name %>　<%= @customer.first_name %></td></tr>
        <tr><th>フリガナ</th><td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td></tr>
        <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th>住所</th><td><%= @customer.address %></td></tr>
        <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
      </table>
      <div class="d-flex flex-row bd-highlight mb-3">
        <div class="offset-md-1 mt-3">
          <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-success" %>
        </div>
        <div class="offset-md-1 mt-3">
          <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>