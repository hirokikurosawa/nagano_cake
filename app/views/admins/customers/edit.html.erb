<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-5">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
      <%= form_with model: @customer,url: admins_customer_path, method: :patch, local:true do |f| %>
        <tr>
          <div class="d-flex flex-row bd-highlight mb-3">
            <div class="col-sm-3">
             <th>会員ID</th>
            </div>
            <div class ="offset-sm-1">
             <td><%= @customer.id %></td>
            </div>
          </div>
        </tr>
        <div class="field">
          <div>
            <%= f.label "氏名", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "フリガナ", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "郵便番号", class: "col-sm-3 control-label" %>
            <%= f.text_field :postal_code %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "住所", class: "col-sm-3 control-label" %>
            <%= f.text_field :address %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "電話番号", class: "col-sm-3 control-label" %>
            <%= f.text_field :telephone_number %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "メールアドレス", class: "col-sm-3 control-label" %>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
        </div>

        <div class="field">
          <div>
            <%= f.label "会員ステータス", class: "col-sm-3 control-label" %>
            <%= f.select :is_active ,[['有効',true],['退会',false]] %><%# チェックボックス %>
          </div>
        </div>

        <div class="offset-md-3 mt-3">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>